// -*- mode: jsonc -*-
{
    "layer": "top", // Waybar at top layer
    "margin": "8 8 0 8",
    "fixed-center": true,
    "reload_style_on_change": true,
    // "position": "bottom", // Waybar position (top|bottom|left|right)
    "height": 46, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    // "spacing": 4, // Gaps between modules (4px)
    "include": ["~/.config/waybar/modules.jsonc"],

    // Choose the order of the modules
    "modules-left": [
        "hyprland/workspaces"
    ],
    "modules-center": [
        "hyprland/language",
        "clock",
        "temperature",
        "memory",
        "cpu"

    ],
    "modules-right": [
        // "mpd",
        // "idle_inhibitor",
        // "pulseaudio",
        // "network",
        // "power-profiles-daemon",
        // "backlight",
        // "keyboard-state",
        // "battery",
        // "battery#bat2",
        "tray",
        "custom/power"
    ],


    "hyprland/workspaces": {
        "format": "{id}"
    },
    "clock": {
        "format": "| {:%a; %b %d, %I:%M %p} |",
        "tooltip": false
    },
    "cpu": {
        "format": " {usage}%",
        "tooltip": false
    },
    "memory": {
        "format": " {used:0.1f} GiB",
        "tooltip": false
        // "format-warning": " {used:0.1f} GiB",
        // "format-critical": " {used:0.1f} GiB",
        // "states": {
        //     "warning": 5,
        //     "critical": 90
        // }
    },
    "temperature": {
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        "format": " {temperatureC}°C",
        "tooltip": false
    },
    "custom/power": {
        "format" : "⏻ ",
		"tooltip": false,
		"on-click": "wlogout"
    },
    "custom/cava": {
        "exec": "~/.config/waybar/cava.sh",
        "tooltip": false,
        "restart-interval": 1
    },
    "hyprland/language": {
    "format-en": "us",
    "format-ru": "ru"
}
}
